<%- model_class = Turma -%>
<div class="page-header">
  <h1 align='center'><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="col-sm-12 col-md-12, row, well">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
    <dd><%= @turma.nome %></dd>
    <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
    <dd><%= @turma.codigo %></dd>
    <dt><strong><%= model_class.human_attribute_name(:turno) %>:</strong></dt>
    <dd><%= @turma.turno %></dd>
    <dt><strong><%= model_class.human_attribute_name(:curso_id) %>:</strong></dt>
    <dd><%= @turma.curso.nome %></dd>
    <dt><strong>Cadastrada em:</strong></dt>
    <dd><%= @turma.created_at.strftime("%d/%m/%Y %H:%m") %></dd>
  </dl>
  <%= link_to t('.back', :default => t("helpers.links.voltar")),
              turmas_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_turma_path(@turma), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.apagar")),
              turma_path(@turma),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>