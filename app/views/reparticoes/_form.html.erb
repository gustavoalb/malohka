<%= simple_form_for(@reparticao) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :sigla %>
    <%= f.input :orgao_id, :collection=>Orgao.all.collect {|o|[o.nome,o.id]},:prompt=>"Selecione o Órgao", label: 'Órgao de vinculação' %>
    <%= f.input :descricao %>
    <%= f.input :data_criacao %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>