<%= simple_form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email %>
  <%= error_span(@usuario[:email]) %>
  <%= f.input :encrypted_password %>
  <%= error_span(@usuario[:encrypted_password]) %>
  <%= f.input :reset_password_token %>
  <%= error_span(@usuario[:reset_password_token]) %>
  <%= f.input :reset_password_sent_at %>
  <%= error_span(@usuario[:reset_password_sent_at]) %>
  <%= f.input :remember_created_at %>
  <%= error_span(@usuario[:remember_created_at]) %>
  <%= f.input :current_sign_in_at %>
  <%= error_span(@usuario[:current_sign_in_at]) %>
  <%= f.input :last_sign_in_at %>
  <%= error_span(@usuario[:last_sign_in_at]) %>
  <%= f.input :current_sign_in_ip %>
  <%= error_span(@usuario[:current_sign_in_ip]) %>
  <%= f.input :last_sign_in_ip %>
  <%= error_span(@usuario[:last_sign_in_ip]) %>
  <%= f.input :login %>
  <%= error_span(@usuario[:login]) %>
  <%= f.input :tipo %>
  <%= error_span(@usuario[:tipo]) %>


<p>
  <%= f.label :roles %><br />
  <% for role in Usuario::ROLES %>
    <%= check_box_tag "usuario[roles][]", role, @usuario.roles.include?(role) %>
    <%=h role.humanize %><br />
  <% end %>
  <%= hidden_field_tag "usuario[roles][]", "" %>
</p>





  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn btn-default' %>
<% end %>
