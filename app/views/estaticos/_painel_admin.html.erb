<div class = 'well'>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Permalink</th>
        <th>Tipo</th>
        <th>Redigido em</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @pagina.id %></td>
        <td><%= @pagina.nome %></td>
        <td><%= @pagina.permalink %></td>
        <td><%= @pagina.tipo %></td>
        <td><%= @pagina.created_at.strftime("%d/%m/%y às %H:%M ") %></td>
        <td>
          <%#= link_to t('.back', :default => t("helpers.links.back")),
              paginas_path, :class => 'btn btn-default btn-xs'  %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pagina_path(@pagina), :class => 'btn btn-default btn-xs' %>
          <%# if can? :destroy, Pagina %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pagina_path(@pagina),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-xs' %>
          <%# end %>
          <%= link_to t('.back', :default => t("helpers.links.voltar")),
              estaticos_path, :class => 'btn btn-default btn-xs'  %>
          <% if can? :update, Pagina %>
            <%= link_to t('.edit', :default => t("helpers.links.Editar")), edit_estatico_path(@pagina.id), :class => 'btn btn-default btn-xs' %>
          <% end %>
          <% if can? :destroy, Pagina %>
            <%= link_to t('.destroy', :default => t("helpers.links.Deletar")), estatico_path(@pagina.id), :method => 'delete',  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-xs' %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>