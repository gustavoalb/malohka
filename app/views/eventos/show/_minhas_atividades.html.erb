<div class="col-sm-12 col-md-12, row">
  <table class="table table-striped table-hover table-bordered table-condensed">
    <thead>
      <tr>
        <th>Data</th>
        <th>Atividade</th>
        <th>Data de inscrição</th>
        <th><%=t '.actions', :default => t("helpers.opções") %></th>
      </tr>
    </thead>
    <tbody>
      <% for participacao in @evento.participacoes %>
      <tr>
        <% for periodo in participacao.componente.periodos %>
        <td><%= periodo.inicio.strftime("%d/%m/%y às %H:%M") %></td>
      <% end %>
      <td><%= participacao.componente.evento.nome %></td>
      <td><%= participacao.created_at.strftime("%d/%m/%y às %H:%M") %></td>
      <td>
        <%= link_to 'Detalhes', root_path, :class => 'btn btn-default btn-xs' %>
        <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      funcionario_path(funcionario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
<% if can? :create, Aluno %>
  <%= link_to "Imprimir Certificado", evento_certificado_path(@evento, format: "pdf" ), :class  => 'btn btn-primary' %>
<% end %>