<div class="container, row">
  <div class="row">
    <div class="col-md-12">
      <div class="panel, well">
        <ul id="myTab1" class="nav nav-tabs nav-justified">
          <ul id="myTab1" class="nav nav-tabs nav-justified">
            <li class="active"><a href="#disponiveis" data-toggle="tab">Disponíveis</a></li>
            <li><a href="#anteriores" data-toggle="tab">Anteriores</a></li>
          </ul>
        </li>
      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="disponiveis">
          <%- model_class = Evento -%>
          <table class="table table-striped">
            <tbody>
              <% Evento.ativos.each do |evento| %>
                <tr>
                  <% if evento.descricao.present? %>
                    <td>
                      <p align='justify'><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        &nbsp;&nbsp;&nbsp;&nbsp;<strong><%= link_to evento.nome, evento_path(evento) %></strong></p>
                      <div>
                        <%= truncate(evento.descricao.html_safe, :length => 1000, :omission => "" , :escape => false) %>
                        <%= link_to '... há mais para saber aqui.', evento_path(evento) %></div>
                    </td>
                  <% else %>
                    <td>em desenvolvimento</td>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="tab-pane fade" id="anteriores">
            <%=render :file => "#{Rails.root}/public/em_construcao.html" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>