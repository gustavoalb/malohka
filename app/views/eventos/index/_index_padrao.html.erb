<div class="container, row">
  <div class="row">
    <div class="col-md-12">
      <div class="panel, well">
        <ul id="myTab1" class="nav nav-tabs nav-justified">
          <ul id="myTab1" class="nav nav-tabs nav-justified">
            <li class="active"><a href="#disponiveis" data-toggle="tab">Dispon√≠veis</a></li>
            <li><a href="#anteriores" data-toggle="tab">Anteriores</a></li>
          </ul>
        </li>
      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="disponiveis">
          <%- model_class = Evento -%>
          <table class="table table-striped">
            <tbody>
              <% Evento.inscricoes_iniciadas.each do |evento| %>
                <tr>
                  <% if evento.descricao.present? %>
                    <td>
                      <p align='justify'><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        &nbsp;&nbsp;&nbsp;&nbsp;<strong><%= link_to evento.nome, evento_path(evento) %></strong></p>
                      <%= evento.descricao.html_safe %>
                      <% if evento.componentes.count>1 %>
                        <hr>
                        <h4>Destaques:</h4>
                        <% for componente in evento.componentes %>
                        <ul>
                          <li><%=  componente.tipo_componente %>: <%= componente.nome %></li>
                        </ul>
                      <% end %>
                    <% else %>
                    <% end %>
                  </td>
                <% else %>
                  <td>em desenvolvimento</td>
                <% end %>
                <td  align='left'>
                  <button class="btn-default btn-xs" data-toggle="modal" data-target="#solicitacao-<%= evento.id %>-notes">Detalhes</button></td>
                <!-- Modal -->
                <div class="modal fade" id="solicitacao-<%= evento.id %>-notes" tabindex="-1" role="dialog" aria-labelledby="solicitacao-<%= evento.id %>-label" aria-hidden="true">
                  <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title" id="solicitacao-<%= evento.id %>-label" align='center'>
                          <%= evento.nome %>
                        </h4>
                      </div>
                      <div class="modal-body">
                        <p><%= evento.descricao.html_safe %></p>
                        <% if evento.componentes.count>1 %>
                          <hr>
                          <h4>Destaques:</h4>
                          <% for componente in evento.componentes %>
                          <ul>
                            <li><%=  componente.tipo_componente %>: <%= componente.nome %></li>
                          </ul>
                        <% end %>
                      <% else %>
                      <% end %>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Modal -->
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane fade" id="anteriores">
        <%= render :partial => 'eventos/index/inscricoes_finalizadas.html' %>
      </div>
    </div>
  </div>
</div>
</div>
</div>