<%- model_class = Aluno -%>
<div class="page-header">
  <h1 align='center'><%= @aluno.pessoa.nome %></h1>
</div>
<div class="col-sm-12 col-md-12, row, well">
  <div class="col-sm-5 col-md-7, thumbnail, center">
    <div align="CENTER">
      <% if @aluno.pessoa.foto.present? %>
        <%= image_tag(@aluno.pessoa.foto.url(:medium)) %>
      <% else %>
        <%= image_tag("anonimo.jpg", size: "250") %>
      <% end -%>
    </div>
    <div align='left'>
      <% if can? :manage, @aluno %>
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
          <dd><%= @aluno.pessoa.cpf %></dd>
          <dt><strong><%= model_class.human_attribute_name('E-mail') %>:</strong></dt>
          <dd><%= @aluno.pessoa.usuario.email %> </dd>
        </dl>
      <% end -%>
    </div>
  </div>
  <div class="col-sm-4 col-md-7">
    <dl class="dl-horizontal">
      <% if @aluno.turma==nil %>
      <% else %>
        <dt><strong>Matrícula:</strong></dt>
        <dd><%= @aluno.matricula %></dd>
        <dt><strong>Nível de ensino:</strong></dt>
        <dd><%= @aluno.turma.nivel.nome %></dd>
        <dt><strong>Curso: &nbsp;</strong></dt>
        <dd> <%= @aluno.turma.curso.nome %></dd>
        <dt><strong>Turma:</strong></dt>
        <dd><%= @aluno.turma.nome %></dd>
        <dt><strong><%= model_class.human_attribute_name(:turno) %>:</strong></dt>
        <dd><%= @aluno.turma.turno %></dd>
      <% end %>
    </dl>
  </div>
</div>
<div>
  <%= link_to t('.back', :default => t("helpers.links.voltar")),
              alunos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_aluno_path(@aluno), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.apagar")),
              aluno_path(@aluno),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% if can? :manage, Aluno %>
    <%= link_to "Gerar Identidade Estudantil",  aluno_path(@aluno, format: "pdf" ),   :class  => 'btn btn-primary' %>
  <% end %>
</div>