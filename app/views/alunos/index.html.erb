<%- model_class = Aluno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if can? :manage, :all %>
  <p>
    <%#= link_to "Outra Coisa", "#{alunos_path}.pdf"(format: "pdf" ),   :class  => 'btn btn-primary' %>
    <%= link_to "Gerar Identidades Estudantis", alunos_path(format: "pdf" ),   :class  => 'btn btn-primary' %>
  </p>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <% @alunos.each do |aluno| %>
        <% if aluno.pessoa.foto.present? %>
          <th><%= model_class.human_attribute_name("Foto") %></th>
        <% else %>
        <% end %>
      <% end %>
      <th><%= model_class.human_attribute_name('Aluno') %></th>
      <th><%= model_class.human_attribute_name(:matricula) %></th>
      <th><%= model_class.human_attribute_name(:ano_ingresso) %></th>
      <th><%= model_class.human_attribute_name(:curso_id) %></th>
      <th><%= model_class.human_attribute_name(:semestre_atual) %></th>
      <th><%= model_class.human_attribute_name(:turma_id) %></th>
      <th><%=t '.actions', :default => t("helpers.Ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <% if aluno.pessoa.foto.present? %>
          <td><%= image_tag(aluno.pessoa.foto(:thumb)) %></td>
        <% else %>
        <% end %>
        <td><%= link_to aluno.pessoa.nome, aluno_path(aluno) %></td>
        <td><%= aluno.matricula %></td>
        <td><%= aluno.ano_ingresso %></td>
        <td><%= aluno.curso_id %></td>
        <td><%= aluno.semestre_atual %></td>
        <td><%= aluno.turma_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_aluno_path(aluno), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      aluno_path(aluno),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_aluno_path,
            :class => 'btn btn-primary' %>