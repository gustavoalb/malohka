<%- model_class = Nivel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="col-sm-12 col-md-12, row, well">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Código</th>
        <th>Data de registro</th>
        <th><%=t '.actions', :default => t("helpers.Ações") %></th>
      </tr>
    </thead>
    <tbody>
      <% @niveis.each do |nivel| %>
        <tr>
          <td><%= link_to nivel.id, nivel_path(nivel) %></td>
          <td><%= nivel.nome %></td>
          <td><%= nivel.codigo %></td>
          <td><%= nivel.created_at.strftime("%d/%m/%Y às %H:%M") %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_nivel_path(nivel), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.Apagar")),
                      nivel_path(nivel),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to t('.new', :default => t("helpers.links.Cadastrar Nível")),
            new_nivel_path,
            :class => 'btn btn-primary' %>