<%- model_class = Usuario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @usuario.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:login) %>:</strong></dt>
  <dd><%= @usuario.login %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @usuario.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:roles_mask) %>:</strong></dt>
  <dd><%= @usuario.roles_mask %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validado) %>:</strong></dt>
  <dd><%= @usuario.validado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_id) %>:</strong></dt>
  <dd><%= @usuario.pessoa_id %></dd>
</dl>
<%= link_to t('.back', :default => t("helpers.links.voltar")),
              usuarios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_usuario_path(@usuario), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.apagar")),
              usuario_path(@usuario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>