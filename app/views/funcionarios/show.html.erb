<%- model_class = Funcionario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="col-sm-5 col-md-7, thumbnail, center">
  <div align="CENTER">
    <% if @funcionario.pessoa.foto.present? %>
      <%= image_tag(@funcionario.pessoa.foto.url(:medium)) %>
    <% else %>
      <%= image_tag("anonimo.jpg", size: "250") %>
    <% end -%>
  </div>
  <div align='left'>
    <% if can? :manage, @funcionario %>
      <hr>
    <% end -%>
  </div>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:matricula) %>:</strong></dt>
  <dd><%= @funcionario.matricula %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cargo) %>:</strong></dt>
  <dd><%= @funcionario.cargo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cargo_id) %>:</strong></dt>
  <dd><%= @funcionario.cargo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_posse) %>:</strong></dt>
  <dd><%= @funcionario.data_posse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_id) %>:</strong></dt>
  <dd><%= @funcionario.pessoa_id %></dd>
</dl>
<%= link_to t('.back', :default => t("helpers.links.back")),
              funcionarios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_funcionario_path(@funcionario), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              funcionario_path(@funcionario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
