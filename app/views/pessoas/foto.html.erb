<h1><%=@pessoa.nome%></h1>
<div id="camera">
  <div class="placeholder img-thumbnail">
  </div>
</div>
<br>
<button id="take_snapshots" class='btn btn-primary'><%=fa_icon('camera')%> Registrar Foto</button>
<button id="show_stream" class="btn btn-default"><%=fa_icon('camera')%> Nova Foto</button><br>
<div id="snapshots"></div>
