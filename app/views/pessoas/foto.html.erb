<input type="hidden" id="api_url" placeholder="/photos/upload" value='<%=pessoa_upload_foto_url(@pessoa)%>'><br>
<img src="<%=asset_path('loader.gif')%>" id="loader">
<div id="upload_status"></div>
<div id="upload_result"></div>