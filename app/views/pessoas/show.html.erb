<%- model_class = Pessoa -%>
<div class="page-header" align='center'>
  <h1><%= @pessoa.nome %></h1>
</div>
<div class="col-sm-12 col-md-12, row, well">
  <div class="col-sm-5 col-md-7, thumbnail, center">
    <div align="CENTER">
      <% if @pessoa.foto.present? %>
        <%= image_tag(@pessoa.foto.url(:medium)) %>
      <% else %>
        <%= image_tag("anonimo.jpg", size: "250") %>
      <% end -%>
    </div>
  </div>
  <div class="col-sm-4 col-md-7">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
      <dd><%= @pessoa.cpf %></dd>
      <dt><strong><%= model_class.human_attribute_name(:rg) %>:</strong></dt>
      <dd><%= @pessoa.rg %></dd>
      <dt><strong>Tipagem Sangu√≠nea:</strong></dt>
      <dd><%= @pessoa.fator_rh  %></dd>
      <dt><strong>Telefone:</strong></dt>
      <dd><%= @pessoa.telefone %></dd>
      <dt><strong><%= model_class.human_attribute_name(:nascimento) %>:</strong></dt>
      <dd><%= @pessoa.nascimento.strftime("%d/%m/%Y") %></dd>
      <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
      <dd><%= @pessoa.email %></dd>
    </dl>
  </div>
</div>
<%= link_to t('.back', :default => t("helpers.links.voltar")),
              pessoas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_pessoa_path(@pessoa), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.apagar")),
              pessoa_path(@pessoa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>