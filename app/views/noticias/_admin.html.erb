        <div id="myTabContent" class="tab-content">
          <div class="tab-pane fade active in" id="publicavel">
            <%- model_class = Noticia -%>
            <table class="table table-striped">
              <tbody>
                <% Noticia.publicavel.each do |publicavel| %>
                  <tr>
                    <td>
                      <%= publicavel.titulo %><br>
                      <%= truncate(publicavel.conteudo.html_safe, :length => 400, :omission => "" , :escape => false) %>
                    </td>
                    <td  align='right'>
                      <button class="btn-default btn-xs" data-toggle="modal" data-target="#noticia-<%= publicavel.id %>-notes">Detalhes</button></td>
                    <!-- Modal -->
                    <div class="modal fade" id="noticia-<%= publicavel.id %>-notes" tabindex="-1" role="dialog" aria-labelledby="noticia-<%= publicavel.id %>-label" aria-hidden="true">
                      <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h4 class="modal-title" id="noticia-<%= publicavel.id %>-label" align='center'><%= publicavel.titulo %></h4>
                            <% if can? :manage, Noticia %>
                              Nota apenas para manager e update- atualizar a notícia quando utilizar o best_in_place
                              <% end %>
                          </div>
                          <div class="modal-body">
                            <div class='container'><%= truncate(publicavel.conteudo.html_safe, :length => 150, :omission => "" , :escape => false) %>...</div>
                            <hr>
                            <dl class="dl-horizontal">
                              <% if can? :manage, Noticia %>
                                <dt><strong>Publicada?</strong></dt>
                                <dd><%= best_in_place_if can?(:manage, Noticia), publicavel, :publicado, as: :checkbox, collection: {false: "Não", true: "Sim"} %></dd>
                                <dt><strong>Em Destaque?</strong></dt>
                                <dd><%= best_in_place_if can?(:manage, Noticia), publicavel, :destaque, as: :checkbox, collection: {false: "Não", true: "Sim"} %></dd>
                                <dt><strong>Em pauta?</strong></dt>
                                <dd><%= best_in_place_if can?(:manage, Noticia), publicavel, :pauta, as: :checkbox, collection: {false: "Não", true: "Sim"} %></dd>
                              <% else %>
                                <dt><strong>Publicada?</strong></dt>
                                <dd><%= sim_nao(publicavel.publicado) %></dd>
                                <dt><strong>Em Destaque?</strong></dt>
                                <dd><%= sim_nao(publicavel.destaque) %></dd>
                                <dt><strong>Em pauta?</strong></dt>
                                <dd><%= sim_nao(publicavel.pauta) %></dd>
                              <% end %>
                              <dt><strong>Redigida em:</strong></dt>
                              <dd><%= publicavel.created_at.strftime("%d/%m/%y às %H:%M") %></dd>
                              <dt><strong>Publicada em:</strong></dt>
                              <dd><%= publicavel.publicado_em.strftime("%d/%m/%y às %H:%M") %></dd>
                              <% if can? :update, Noticia %>
                                <dt><strong>Ações:</strong></dt>
                                <dd><%= link_to t('.edit', :default => t("helpers.links.Editar")), edit_noticia_path(publicavel), :class => 'btn btn-default btn-xs' %>
                                <% end %>
                                <% if can? :destroy, Noticia %>
                                  <%= link_to t('.destroy', :default => t("helpers.links.Deletar")), noticia_path(publicavel), :method => 'delete',  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-xs' %>
                                <% end %></dd>
                            </dl>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Modal -->
                  </tr>
                <% end %>
              </tbody>
            </table>
