<%= simple_form_for @noticia, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <div class="col-sm-12 col-md-12, row, well">
    <div class="col-sm-12 col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <% if can? :manage, @noticia %>
              <th>Publicado?</th>
            <% end %>
            <th>Em destaque?</th>
            <th>Em pauta?</th>
            <th>Data de publicação</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% if can? :manage, @noticia %>
              <td><%= sim_nao(@noticia.publicado) %></td>
            <% end %>
            <td><%= sim_nao(@noticia.destaque) %><%=f.input :status,collection:[["Em Destaque","em_destaque"],["Em Pauta","em_pauta"]]%></td>
            <td><%= sim_nao(@noticia.pauta) %></td>
            <td>
              <!-- <div class="container"> -->
              <div class="form-group">
                <div class="form-inline">
                  <div class='input-group date' id='datetimepicker12'>
                    <%= f.input :publicado_em, input_html:{value: f.object.publicado_em.to_s_br},as: :string, label: false %> &nbsp;<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                  </div>
                </div>
              </div>
              <!-- </div> -->
            </td>
          </tr>
        </tbody>
      </table>
      <%= f.input :titulo, label: 'Título' %>
      <%= f.input :conteudo, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
    </div>
  </div>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                noticias_path, :class => 'btn btn-default' %>
<% end %>