        <%= link_to (image_tag "ii_feamat.png"), root_path %>
        <div class="carousel-caption">
          <h3 style="color:black"></h3>
          <p style="color:black"></p>
        </div>
      </div>
      <div class="item">
        <%= link_to (image_tag "2-feamat.png"), root_path %>
        <div class="carousel-caption">
