<%- model_class = Solicitacao -%>
<div class="page-header">
  <h1>Solicitação - <%= tipo_solicitavel(@solicitacao.solicitavel_type) %></h1>
</div>
<p style="text-align: center"><strong>Status do processo:</strong></p>
<% if @solicitacao.solicitavel.status=='solicitado' %>
  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%"><%= status_iestudantil(@solicitacao.solicitavel.status) %>
    </div>
  </div>
<% elsif  @solicitacao.solicitavel.status=='impresso'%>
  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width: 66%"><%= status_iestudantil(@solicitacao.solicitavel.status) %>
    </div>
  </div>
<% elsif  @solicitacao.solicitavel.status=='entregue'%>
  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"><%= status_iestudantil(@solicitacao.solicitavel.status) %>
    </div>
  </div>
<% end %>
