<%- model_class = Solicitacao -%>
<div class="page-header">
  <h1 align='center'>Solicitação - <%= tipo_solicitavel(@solicitacao.solicitavel_type) %></h1>
</div>
<%= progresso_iestudantil(@solicitacao.solicitavel.status) %>
<hr>
<div class="col-sm-12 col-md-12, row, well">
  <div class="col-sm-5 col-md-7, thumbnail, center">
    <div align="CENTER">
    </div>
    <div>
      <% if can? :manage, @solicitacao %>
        <p><strong>Id do Solicitante:&nbsp;</strong><%= @solicitacao.solicitante_id %></p>
        <p><strong>Id da Solicitação:&nbsp;</strong><%= @solicitacao.id %></p>
        <p><strong>Id da <%= tipo_solicitavel(@solicitacao.solicitavel_type) %>:&nbsp;</strong><%= @solicitacao.solicitavel.id %><%#= @solicitacao.aluno_id %></p>
      <% end -%>
      <p><strong>Criação:&nbsp;</strong><%= ver_form_nil(@solicitacao.created_at.strftime("%d/%m/%y às %H:%M ")) %></p>
      <p><strong>Envio para lote:&nbsp;</strong><%= ver_form_nil(@solicitacao.solicitavel.data_lote) %></p>
      <p><strong>Impressão:&nbsp;</strong><%= ver_form_nil(@solicitacao.solicitavel.data_impressao) %></p>
      <p><strong>Entrega:&nbsp;</strong><%= ver_form_nil(@solicitacao.solicitavel.data_entrega) %></p>
    </div>
  </div>
  <div class="col-sm-4 col-md-7">
    <p><strong>Aluno:&nbsp;</strong><%= @solicitacao.solicitavel.aluno.pessoa.nome %></p>
    <p><strong>Matrícula:&nbsp;</strong><%= @solicitacao.solicitavel.aluno.matricula %></p>
    <p><strong>Status geral do processo:&nbsp;</strong><%= status_solicitavel(@solicitacao.status) %></p>
  </div>
</div>
<%= link_to t('.back', :default => t("helpers.links.voltar")),
              solicitacoes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_solicitacao_path(@solicitacao), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.apagar")),
              solicitacao_path(@solicitacao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>