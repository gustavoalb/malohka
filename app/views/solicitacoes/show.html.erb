<div class="col-sm-12 col-md-12, row, well">
  <div class="col-sm-5 col-md-7, thumbnail, center">
    <div align="CENTER">
    </div>
    <div>
      <p><strong>Data de criação:&nbsp;</strong><%= @solicitacao.created_at.strftime("%d/%m/%y às %H:%M ") %></p>
      <p><strong>Data de impressão:&nbsp;</strong><%= @solicitacao.created_at.strftime("%d/%m/%y às %H:%M ") %></p>
      <p><strong>Data de entrega:&nbsp;</strong><%= @solicitacao.created_at.strftime("%d/%m/%y às %H:%M ") %></p>
      <!-- <p><strong>Finalizado?&nbsp;</strong><%= sim_nao(@solicitacao.finalizado) %></p> -->
    </div>
  </div>
  <div class="col-sm-4 col-md-7">
    <dl class="dl-horizontal">
      <% if can? :manage, @solicitacao %>
        <p><strong>Id do Solicitante:&nbsp;</strong><%= @solicitacao.solicitante_id %></p>
      <% end -%>
      <p><strong>Aluno:&nbsp;</strong><%= @solicitacao.solicitavel.aluno.pessoa.nome %></p>
      <p><strong>Matrícula:&nbsp;</strong><%= @solicitacao.solicitavel.aluno.matricula %></p>
      <p><strong>Status do processo:&nbsp;</strong><%= status_solicitacao(@solicitacao.status) %></p>
    </div>
  </div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              solicitacoes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_solicitacao_path(@solicitacao), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              solicitacao_path(@solicitacao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>