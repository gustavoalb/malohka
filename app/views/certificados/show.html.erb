<%- model_class = Participacao -%>
<div class="page-header" align='center'>
  <h1>Confirmação de Validade de certificado</h1>
</div>
<div class="col-sm-12 col-md-12, row, well">
  <h3 align='center'><strong><%= @participacao.pessoa.nome %></strong></h3>
  <br>
  <dl class="dl-horizontal">
    <dt><strong>Evento:</strong></dt>
    <dd><%= @participacao.componente.evento.nome %></dd>
    <dt><strong>Período:</strong></dt>
    <dd><%= @participacao.componente.evento.periodos.minimum('inicio').strftime("%d de %B") %> a <%= @participacao.componente.evento.periodos.maximum('inicio').strftime("%d de %B de %Y") %></dd>
    <dt><strong>Departamento:</strong></dt>
    <dd><%= @participacao.componente.evento.responsavel.departamento %></dd>
    <dt><strong>Coordenação:</strong></dt>
    <dd><%= @participacao.componente.evento.responsavel.pessoa.nome %></dd>
  </dl>
</div>
