<%= simple_nested_form_for(@pesquisa) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :nome %>
  </div>
  <%= f.simple_fields_for :perguntas do |builder|%>
    <%= render 'campos_perguntas', :f => builder %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>