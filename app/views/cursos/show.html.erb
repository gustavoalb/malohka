<%- model_class = Curso -%>
<div class="page-header">
  <h1 align='center'>Curso: <%= @curso.nome %></h1>
</div>
<div class="col-sm-12 col-md-12, row, well">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
    <dd><%= @curso.codigo %></dd>
    <dt><strong><%= model_class.human_attribute_name(:nivel_id) %>:</strong></dt>
    <dd><%= @curso.nivel.nome %></dd>
    <dt><strong>Cadastrado em:</strong></dt>
    <dd><%= @curso.created_at.strftime("%d/%m/%Y %H:%m") %></dd>
  </dl>
  <%= link_to t('.back', :default => t("helpers.links.voltar")),
              cursos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_curso_path(@curso), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.apagar")),
              curso_path(@curso),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>