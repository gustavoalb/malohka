<%- model_class = Curso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:codigo) %></th>
      <% @cursos.each do |curso| %>
        <% if curso.nivel==nil %>
        <% else %>
          <th><%= model_class.human_attribute_name(:nivel_id) %></th>
        <% end %>
      <% end %>
      <th><%=t '.actions', :default => t("helpers.Ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= link_to curso.nome, curso_path(curso) %></td>
        <td><%= curso.codigo %></td>
        <% if curso.nivel==nil %>
        <% else %>
          <td><%= curso.nivel.nome %> </td>
        <% end %>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_curso_path(curso), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      curso_path(curso),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_curso_path,
            :class => 'btn btn-primary' %>